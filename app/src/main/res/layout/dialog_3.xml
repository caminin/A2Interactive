<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="#ffeb00"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/d3_smiley"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/face_smirk" />

        <TextView
            android:id="@+id/d3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="aaa"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/d3_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="aaa"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

        </FrameLayout>

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/d3_btn_yes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Exact"
            android:textSize="11sp"
            app:mfb_icon="@string/ioni_checkmark_round" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

        </FrameLayout>

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/d3_btn_maybe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Presque !"
            android:textSize="11sp"
            app:mfb_icon="@string/ioni_checkmark_round" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

        </FrameLayout>

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/d3_btn_no"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:onClick="cancelDialog"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Pas du tout..."
            android:textSize="11sp"
            app:mfb_icon="@string/ioni_checkmark_round" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>