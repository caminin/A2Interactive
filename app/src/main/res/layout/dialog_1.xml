<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="#ffeb00"
    android:orientation="vertical">

    <TextView
        android:id="@+id/d1_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:text="aaa"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/d1_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="aaa"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/d1_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Oui"
                app:mfb_icon="@string/ioni_checkmark_round">

            </com.rilixtech.materialfancybutton.MaterialFancyButton>

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/d1_btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="cancelDialog"
                android:text="Non"
                app:mfb_icon="@string/ioni_android_cancel" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>